// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Veya mysql/sqlite
  url      = env("DATABASE_URL")
}

// --- KULLANICI & RESTORAN ---

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?  
  role      String   @default("RESTAURANT_OWNER")
  createdAt DateTime @default(now())
  
  restaurants Restaurant[]
}

model Restaurant {
  id           String     @id @default(cuid())
  name         String
  slug         String     @unique
  logoUrl      String?
  coverUrl     String?
  isActive     Boolean    @default(true)
  userId       String     @unique
  
  // Sosyal Medya
  instagramUrl String?
  facebookUrl  String?
  twitterUrl   String?
  websiteUrl   String?

  // --- İSTATİSTİK ---
  viewCount    Int        @default(0)

  // --- ABONELİK SİSTEMİ ---
  isSubscribed     Boolean   @default(false) 
  subscriptionEnds DateTime?                 
  payments         Payment[]                 

  // --- FATURA SİSTEMİ ---
  tempInvoiceRequests TempInvoiceRequest[] // Bekleyen fatura talepleri
  invoiceLogs         InvoiceLog[]         // Kesilen fatura logları

  // --- OYUNLAŞTIRMA (ÇARKIFELEK) ---
  wheelItems   WheelItem[] // <-- YENİ EKLENEN İLİŞKİ

  colorPalette String     @default("blue") // blue, red, orange, green, purple

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  user         User       @relation(fields: [userId], references: [id])
  categories   Category[]
}

model Payment {
  id           String     @id @default(cuid())
  merchantOid  String     @unique 
  amount       Decimal    
  status       String     
  createdAt    DateTime   @default(now())
  
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

// --- MENÜ YÖNETİMİ ---

model Category {
  id           String     @id @default(cuid())
  name         String
  imageUrl     String?    
  order        Int        @default(0)
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  products     Product[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal
  imageUrl    String?
  isAvailable Boolean  @default(true)
  order       Int      @default(0)

  allergens   String[] @default([])
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  // Ürün Varyasyonları (Porsiyonlar)
  variants    ProductVariant[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProductVariant {
  id        String   @id @default(cuid())
  name      String   // Örn: "1.5 Porsiyon", "200gr"
  price     Decimal  // Örn: 300
  
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// --- FATURA YÖNETİMİ (KVKK UYUMLU) ---

// 1. Hassas verilerin GEÇİCİ olarak tutulduğu tablo.
model TempInvoiceRequest {
  id           String   @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  
  // Hassas Veriler
  legalName    String   
  taxNumber    String   
  taxOffice    String?  
  address      String   
  amount       Decimal  
  
  createdAt    DateTime @default(now())
}

// 2. Kalıcı ve GÜVENLİ log tablosu.
model InvoiceLog {
  id           String   @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  
  maskedName   String   
  maskedTaxNo  String   
  amount       Decimal
  
  issuedAt     DateTime @default(now())
}

// --- OYUNLAŞTIRMA (ÇARKIFELEK ÖDÜLLERİ) ---

model WheelItem {
  id           String     @id @default(cuid())
  restaurantId String
  label        String     // Örn: "%10 İndirim", "Bedava İçecek"
  color        String?    // Dilim Rengi (Opsiyonel)
  percentage   Int        // Kazanma ihtimali (1-100 arası ağırlık)
  isActive     Boolean    @default(true)
  
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime   @default(now())
}