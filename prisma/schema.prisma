// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Veya mysql/sqlite
  url      = env("DATABASE_URL")
}

// --- KULLANICI & RESTORAN ---

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?  
  role      String   @default("RESTAURANT_OWNER")
  createdAt DateTime @default(now())
  
  restaurants Restaurant[]
}

model Restaurant {
  id           String     @id @default(cuid())
  name         String
  slug         String     @unique
  logoUrl      String?
  coverUrl     String?
  isActive     Boolean    @default(true)
  userId       String     @unique
  
  // Sosyal Medya
  instagramUrl String?
  facebookUrl  String?
  twitterUrl   String?
  websiteUrl   String?

  // --- Ä°STATÄ°STÄ°K (YENÄ° EKLENEN) ---
  viewCount    Int        @default(0)  // <-- BU SATIRI EKLEYÄ°N

  // --- ABONELÄ°K SÄ°STEMÄ° ---
  isSubscribed     Boolean   @default(false) 
  subscriptionEnds DateTime?                 
  payments         Payment[]                 

  // --- FATURA SÄ°STEMÄ° (YENÄ° EKLENDÄ°) ---
  tempInvoiceRequests TempInvoiceRequest[] // Bekleyen fatura talepleri
  invoiceLogs         InvoiceLog[]         // Kesilen fatura loglarÄ±

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  user         User       @relation(fields: [userId], references: [id])
  categories   Category[]
}

model Payment {
  id           String     @id @default(cuid())
  merchantOid  String     @unique 
  amount       Decimal    
  status       String     
  createdAt    DateTime   @default(now())
  
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
}

// --- MENÃœ YÃ–NETÄ°MÄ° ---

model Category {
  id           String     @id @default(cuid())
  name         String
  imageUrl     String?    
  order        Int        @default(0)
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  products     Product[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal
  imageUrl    String?
  isAvailable Boolean  @default(true)

  // ðŸ‘‡ BU SATIRI EKLEYÄ°N
  order       Int      @default(0)
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  // ÃœrÃ¼n VaryasyonlarÄ± (Porsiyonlar)
  variants    ProductVariant[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProductVariant {
  id        String   @id @default(cuid())
  name      String   // Ã–rn: "1.5 Porsiyon", "200gr"
  price     Decimal  // Ã–rn: 300
  
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// --- FATURA YÃ–NETÄ°MÄ° (KVKK UYUMLU) ---

// 1. Hassas verilerin GEÃ‡Ä°CÄ° olarak tutulduÄŸu tablo.
// Fatura kesildikten sonra bu satÄ±r SÄ°LÄ°NECEK.
model TempInvoiceRequest {
  id           String   @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  
  // Hassas Veriler (Sadece iÅŸlem sÃ¼resince tutulur)
  legalName    String   // Ad Soyad veya Åžirket ÃœnvanÄ±
  taxNumber    String   // TC veya Vergi No
  taxOffice    String?  // Vergi Dairesi
  address      String   // AÃ§Ä±k Adres
  amount       Decimal  // Tutar
  
  createdAt    DateTime @default(now())
}

// 2. KalÄ±cÄ± ve GÃœVENLÄ° log tablosu.
// Burada sadece "Fatura kesildi" izi kalÄ±r, kiÅŸisel veri maskelenir.
model InvoiceLog {
  id           String   @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  
  // MaskelenmiÅŸ/Anonim Veriler (Ã–rn: Ahm** YÄ±l***)
  maskedName   String   
  maskedTaxNo  String   
  amount       Decimal
  
  issuedAt     DateTime @default(now()) // FaturanÄ±n kesildiÄŸi/iÅŸlendiÄŸi an
}